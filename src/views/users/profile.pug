extends ../base.pug
include ../mixins/video.pug

block content
  div.profile__data
    img(src="/" + user.avatarUrl).avatar
    h3=user.name

  if(isOwner)
    div.profile__edit
      a(href="/users/edit") Edit Profile &rarr;

  div.video-grid
    each video in user.videos
      +video(video)
    else 
      span.empty__message No videos found