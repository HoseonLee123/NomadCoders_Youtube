extends base.pug

block content
  if errorMessage 
    span=errorMessage 

  form(method="POST")
    input(name="username" type="text" required placeholder="Username")
    input(name="password" type="password" required placeholder="Password")
    input(type="submit" value="Login")
    br
    a(href="https://github.com/login/oauth/authorize?client_id=7216d50f732b14ff4992&allow_signup=false&scope=user:email read:user") Continue with Github 
  hr
  div
    span Don't have an account? 
    a(href="/join") Create one now