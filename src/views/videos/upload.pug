extends ../base.pug

block content
  div 
    video#preview
    button#actionBtn Start Recording 
      //- i.fa-solid.fa-record-vinyl
  if errorMessage   
    h4=errorMessage 

  form(method="POST" enctype="multipart/form-data")
    label(for="video") Video File 
    input(type="file" accept="video/*" required id="video" name="video")
    label(for="thumbnail") Thumbnail File 
    input(type="file" accept="image/*" required id="thumbnail" name="thumbnail")
    input(name="title" type="text" placeholder="Title" required maxlength=80  )
    input(name="description" type="text" placeholder="Description" required)
    input(name="hashtags" type="text" placeholder="Hashtags, separated by comma" required )
    input(value="Upload" type="submit" )

block scripts 
  script(src="/assets/js/recorder.js") 